# ChunkSmith Hybrid Server (.env example)
# Copy to server/.env or server/.env.local and adjust values.
# DO NOT commit secrets in server/.env

# ==================== General ====================
CHUNKSMITH_ENV=dev
CHUNKSMITH_STORAGE_DIR=./storage
CHUNKSMITH_CLEAR_STORAGE_ON_STARTUP=true
CHUNKSMITH_MAX_PDF_MB=50
CHUNKSMITH_CORS_ORIGINS=http://localhost:3000

# ==================== PDF Extractor ====================
PDF_EXTRACTOR=pymupdf
PDF_EXTRACTOR_VERSION=1.0.0

# ==================== Embedding (LangChain OpenAI) ====================
# Required for api.openai.com
# For local OpenAI-compatible servers, you can set any value (e.g. "unused").
OPENAI_API_KEY=unused

# Optional (defaults to the public OpenAI endpoint)
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ORG=
OPENAI_PROJECT=
OPENAI_TIMEOUT_S=60
OPENAI_MAX_RETRIES=3

# Models shown in the UI dropdown
EMBEDDING_MODELS=azure/text-embedding-3-large,azure/text-embedding-3-small

# ==================== OpenSearch ====================
OPENSEARCH_HOST=http://localhost:9200
OPENSEARCH_BASE_INDEX=chunksmith-chunks
OPENSEARCH_BULK_SIZE=200
OPENSEARCH_VERIFY_SSL=false
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=

# ==================== Default Chunk Strategy ====================
DEFAULT_CHUNK_SIZE=800
DEFAULT_OVERLAP=100
DEFAULT_SPLIT_MODE=paragraph
DEFAULT_NORMALIZE=true
